<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="centerVBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" spacing="24.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="btnReturn" mnemonicParsing="false" text="Volver" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnAdd" mnemonicParsing="false" text="Añadir" />
               </children>
            </HBox>
            <Label fx:id="lblContact" text="Añadir Empresa">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="30.0" top="30.0" />
         </padding>
      </VBox>
      <VBox>
         <children>
            <Label text="Nombre" />
            <TextField fx:id="txtName" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Descripción" />
            <TextField fx:id="txtDescription" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Número" />
            <TextField fx:id="txtPhoneNumber" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Página web" />
            <TextField fx:id="txtWebPage" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Dirección" />
            <HBox prefHeight="19.0" prefWidth="600.0" spacing="40.0">
               <children>
                  <TextField fx:id="txtLocationDescription" promptText="Detalle" />
                  <TextField fx:id="txtLocationURL" promptText="Link Maps" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
